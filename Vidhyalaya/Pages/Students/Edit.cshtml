@model Vidhyalaya.Pages_Students.EditModel



<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Address" class="control-label"></label>
                <input asp-for="Student.Address" class="form-control" />
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Student.sex" class="control-label"></label>
                <select asp-for="Student.sex" class="form-control"></select>
                <span asp-validation-for="Student.sex" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Student.Gender" class="control-label"></label>
                <div>
                    <select asp-for="Student.Gender" class="form-control"></select>
                    <span asp-validation-for="Student.Gender" class="text-danger"></span>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="Student.Gender" value="Male" /> Male
                    </label>
                     <label>
                        <input type="radio" asp-for="Student.Gender" value="Female" /> Female
                    </label>
            <div class="form-group">
                <label asp-for="Student.Dob" class="control-label"></label>
                <input asp-for="Student.Dob" class="form-control" />
                <span asp-validation-for="Student.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Photo" class="control-label"></label>
                <input asp-for="Student.Photo" class="form-control" />
                <span asp-validation-for="Student.Photo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Student.IsActive" /> @Html.DisplayNameFor(model =>
                            model.Student.IsActive)
                        </label>
                    </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                  <a asp-page="./Index" class="btn btn-info" >Back to List </a> 
            </div>
        </form>
    </div>
</div>



