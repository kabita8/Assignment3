@page
@model Vidhyalaya.Pages_Grades.EditModel



<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.Id" />
            <div class="form-group">
                <label asp-for="Grade.Label" class="control-label"></label>
                <input asp-for="Grade.Label" class="form-control" />
                <span asp-validation-for="Grade.Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.ClassTeacher" class="control-label"></label>
                <input asp-for="Grade.ClassTeacher" class="form-control" />
                <span asp-validation-for="Grade.ClassTeacher" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Grade.Medium" class="control-label"></label>
                <select asp-for="Grade.Medium" class="form-control">
                    <option value="English">English</option>
                    <option value="Nepali">Nepali</option>
                    <!-- Add more options if needed -->
                </select>
                <span asp-validation-for="Grade.Medium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.Subject" class="control-label"></label>
                <input asp-for="Grade.Subject" class="form-control" />
                <span asp-validation-for="Grade.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.SessionYear" class="control-label"></label>
                <input asp-for="Grade.SessionYear" class="form-control" />
                <span asp-validation-for="Grade.SessionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>



